import SwiftUI

struct ContentView: View {
    @State private var selectedTab = 0
    @State private var weather = Weather.sample
    @State private var selectedScene = "通勤上班"
    @State private var outfit = Outfit.sampleOutfit
    @State private var isRefreshing = false
    
    // 场景数据
    let scenes = ["通勤上班", "朋友聚会", "商务会议", "运动健身", "约会", "居家休闲"]
    
    var body: some View {
        TabView(selection: $selectedTab) {
            // 首页
            NavigationView {
                ScrollView {
                    VStack(spacing: 20) {
                        // 天气卡片
                        WeatherCardView(weather: weather)
                        
                        // 场景选择
                        SceneSelectionView(
                            scenes: scenes,
                            selectedScene: $selectedScene
                        )
                        
                        // 推荐卡片
                        OutfitCardView(outfit: outfit)
                        
                        // 快捷操作
                        QuickActionsView()
                    }
                    .padding()
                }
                .navigationTitle("衣点通")
                .navigationBarTitleDisplayMode(.inline)
                .toolbar {
                    ToolbarItem(placement: .navigationBarTrailing) {
                        Button(action: refreshData) {
                            Image(systemName: "arrow.clockwise")
                                .foregroundColor(.blue)
                        }
                    }
                }
            }
            .tabItem {
                Image(systemName: "house.fill")
                Text("首页")
            }
            .tag(0)
            
            // 衣橱页面
            NavigationView {
                WardrobeView()
            }
            .tabItem {
                Image(systemName: "hanger")
                Text("衣橱")
            }
            .tag(1)
            
            // 添加衣物页面
            NavigationView {
                AddClothingView()
            }
            .tabItem {
                Image(systemName: "plus.circle.fill")
                Text("添加")
            }
            .tag(2)
            
            // 设置页面
            NavigationView {
                SettingsView()
            }
            .tabItem {
                Image(systemName: "gear")
                Text("设置")
            }
            .tag(3)
        }
        .accentColor(.blue)
    }
    
    private func refreshData() {
        isRefreshing = true
        // 模拟数据刷新
        DispatchQueue.main.asyncAfter(deadline: .now() + 1) {
            isRefreshing = false
        }
    }
}

// MARK: - 天气卡片组件
struct WeatherCardView: View {
    let weather: Weather
    
    var body: some View {
        VStack(alignment: .leading, spacing: 12) {
            HStack {
                Image(systemName: "location.fill")
                    .foregroundColor(.gray)
                Text(weather.city)
                    .font(.headline)
                Spacer()
                Text(Date().formatted(date: .abbreviated, time: .omitted))
                    .font(.caption)
                    .foregroundColor(.gray)
            }
            
            HStack {
                VStack(alignment: .leading) {
                    Text(weather.temperatureString)
                        .font(.system(size: 48, weight: .bold))
                    
                    Text(weather.condition.rawValue)
                        .font(.title3)
                        .foregroundColor(.gray)
                }
                
                Spacer()
                
                VStack(alignment: .trailing) {
                    Image(systemName: weather.condition.icon)
                        .font(.system(size: 50))
                        .foregroundColor(Color(hex: weather.condition.color))
                    
                    Text("湿度 \(weather.humidity)%")
                        .font(.caption)
                        .foregroundColor(.gray)
                }
            }
        }
        .padding()
        .background(Color(.systemBackground))
        .cornerRadius(16)
        .shadow(color: Color.black.opacity(0.1), radius: 8, x: 0, y: 4)
    }
}

// MARK: - 场景选择组件
struct SceneSelectionView: View {
    let scenes: [String]
    @Binding var selectedScene: String
    
    var body: some View {
        VStack(alignment: .leading, spacing: 12) {
            Text("今日场景")
                .font(.headline)
            
            ScrollView(.horizontal, showsIndicators: false) {
                HStack(spacing: 12) {
                    ForEach(scenes, id: \.self) { scene in
                        Button(action: {
                            selectedScene = scene
                        }) {
                            Text(scene)
                                .font(.subheadline)
                                .padding(.horizontal, 20)
                                .padding(.vertical, 10)
                                .background(selectedScene == scene ? Color.blue : Color(.systemGray6))
                                .foregroundColor(selectedScene == scene ? .white : .primary)
                                .cornerRadius(20)
                        }
                    }
                }
            }
        }
        .padding(.vertical, 8)
    }
}

// MARK: - 搭配推荐卡片组件
struct OutfitCardView: View {
    let outfit: Outfit
    
    var body: some View {
        VStack(alignment: .leading, spacing: 16) {
            HStack {
                Text("今日推荐")
                    .font(.title2)
                    .fontWeight(.bold)
                
                Spacer()
                
                HStack(spacing: 4) {
                    Image(systemName: "star.fill")
                        .foregroundColor(.yellow)
                    Text(String(format: "%.1f", outfit.score))
                        .fontWeight(.semibold)
                }
                .padding(.horizontal, 12)
                .padding(.vertical, 6)
                .background(Color.yellow.opacity(0.2))
                .cornerRadius(12)
            }
            
            // 搭配预览区域
            ZStack {
                RoundedRectangle(cornerRadius: 12)
                    .fill(Color(.systemGray6))
                    .frame(height: 200)
                
                VStack {
                    Image(systemName: "hanger")
                        .font(.system(size: 60))
                        .foregroundColor(.gray)
                    Text("穿搭预览图")
                        .foregroundColor(.gray)
                        .padding(.top, 8)
                }
            }
            
            Text(outfit.name)
                .font(.title3)
                .fontWeight(.semibold)
            
            Text(outfit.temperatureRange)
                .font(.subheadline)
                .foregroundColor(.gray)
            
            Text(outfit.description)
                .font(.body)
                .foregroundColor(.secondary)
                .lineSpacing(4)
            
            // 衣物标签
            ScrollView(.horizontal, showsIndicators: false) {
                HStack(spacing: 8) {
                    ForEach(outfit.items) { item in
                        HStack(spacing: 6) {
                            Circle()
                                .fill(Color(item.color.rawValue))
                                .frame(width: 12, height: 12)
                            Text(item.name)
                                .font(.caption)
                                .foregroundColor(.gray)
                        }
                        .padding(.horizontal, 12)
                        .padding(.vertical, 6)
                        .background(Color(.systemGray6))
                        .cornerRadius(12)
                    }
                }
            }
            
            Button(action: {
                // 查看详情
            }) {
                HStack {
                    Text("查看详情")
                        .fontWeight(.medium)
                    Spacer()
                    Image(systemName: "chevron.right")
                }
                .foregroundColor(.blue)
                .padding(.vertical, 12)
            }
        }
        .padding()
        .background(Color(.systemBackground))
        .cornerRadius(16)
        .shadow(color: Color.black.opacity(0.1), radius: 8, x: 0, y: 4)
    }
}

// MARK: - 快捷操作组件
struct QuickActionsView: View {
    var body: some View {
        VStack(alignment: .leading, spacing: 16) {
            Text("快捷操作")
                .font(.headline)
            
            HStack(spacing: 20) {
                QuickActionButton(
                    icon: "plus.circle.fill",
                    title: "添加衣物",
                    color: .blue
                )
                
                QuickActionButton(
                    icon: "hanger.fill",
                    title: "我的衣橱",
                    color: .green
                )
                
                QuickActionButton(
                    icon: "calendar",
                    title: "穿搭日历",
                    color: .orange
                )
            }
        }
        .padding(.vertical, 8)
    }
}

struct QuickActionButton: View {
    let icon: String
    let title: String
    let color: Color
    
    var body: some View {
        Button(action: {}) {
            VStack(spacing: 8) {
                Image(systemName: icon)
                    .font(.title)
                    .foregroundColor(color)
                Text(title)
                    .font(.caption)
                    .foregroundColor(.gray)
            }
            .frame(maxWidth: .infinity)
        }
    }
}

// MARK: - 颜色扩展
extension Color {
    init(hex: String) {
        let hex = hex.trimmingCharacters(in: CharacterSet.alphanumerics.inverted)
        var int: UInt64 = 0
        Scanner(string: hex).scanHexInt64(&int)
        let a, r, g, b: UInt64
        switch hex.count {
        case 3: // RGB (12-bit)
            (a, r, g, b) = (255, (int >> 8) * 17, (int >> 4 & 0xF) * 17, (int & 0xF) * 17)
        case 6: // RGB (24-bit)
            (a, r, g, b) = (255, int >> 16, int >> 8 & 0xFF, int & 0xFF)
        case 8: // ARGB (32-bit)
            (a, r, g, b) = (int >> 24, int >> 16 & 0xFF, int >> 8 & 0xFF, int & 0xFF)
        default:
            (a, r, g, b) = (1, 1, 1, 0)
        }
        self.init(
            .sRGB,
            red: Double(r) / 255,
            green: Double(g) / 255,
            blue: Double(b) / 255,
            opacity: Double(a) / 255
        )
    }
}
